@model DershaneTakipSistemi.Models.Ogrenci

@{
    ViewData["Title"] = "Yeni Öğrenci Oluştur";
}

<h1>@ViewData["Title"]</h1>
<h4>Öğrenci Bilgileri</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-3">
                <label asp-for="AdSoyad" class="control-label"></label>
                <input asp-for="AdSoyad" class="form-control" />
                <span asp-validation-for="AdSoyad" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="TCKimlik" class="control-label"></label>
                <input asp-for="TCKimlik" class="form-control" />
                <span asp-validation-for="TCKimlik" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="KayitTarihi" class="control-label"></label>
                <input asp-for="KayitTarihi" class="form-control" />
                <span asp-validation-for="KayitTarihi" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <input type="submit" value="Oluştur" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-primary">Listeye Geri Dön</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
