@model DershaneTakipSistemi.Models.Personel

@{
    {
        ViewData["Title"] = "Personel Detayları";
    }
}

<h1>@ViewData["Title"]</h1>

<div>
    <h4>Personel Bilgileri</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Ad)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Ad)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Soyad)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Soyad)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TCKimlik)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TCKimlik)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Gorevi)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Gorevi)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CepTelefonu)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CepTelefonu)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IseBaslamaTarihi)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IseBaslamaTarihi)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AktifMi)
        </dt>
        <dd class="col-sm-10">
            @(Model.AktifMi ? "Evet" : "Hayır")
        </dd>
    </dl>
</div>

<hr /> @* Araya bir çizgi ekleyelim *@

<!-- ===== YENİ EKLENEN SORUMLU OLDUĞU SINIFLAR BÖLÜMÜ ===== -->
<h4>Sorumlu Olduğu Sınıflar</h4>

@if (Model.SorumluOlduguSiniflar != null && Model.SorumluOlduguSiniflar.Any())
{
    <table class="table table-striped table-sm mt-3">
        <thead>
            <tr>
                <th>Sınıf Adı</th>
                <th>Açıklama</th>
                <th>Kapasite</th>
                <th>İşlemler</th> @* Sınıf detayına gitme linki *@
            </tr>
        </thead>
        <tbody>
            @foreach (var sinif in Model.SorumluOlduguSiniflar.OrderBy(s => s.Ad))
            {
                <tr>
                    <td>@sinif.Ad</td>
                    <td>@sinif.Aciklama</td>
                    <td>@sinif.Kapasite</td>
                    <td>
                        <a asp-controller="Sinifs" asp-action="Details" asp-route-id="@sinif.Id" class="btn btn-sm btn-outline-info">Detay</a>
                        @* Eğer Controller adınız SinifsController ise asp-controller="Sinifs" yapın *@
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Bu personelin sorumlu olduğu sınıf bulunmamaktadır.</p>
}
<!-- ====================================================== -->

<div class="mt-4">
    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary">Düzenle</a> |
    <a asp-action="Index" class="btn btn-secondary">Listeye Geri Dön</a>
</div>
